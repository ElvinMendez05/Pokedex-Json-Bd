<div class="container my-5">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">üõ°Ô∏è Mantenimiento de Pokemones</h2>
    <a href="/pokemones/create" class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Crear nuevo pok√©mon
    </a>
  </div>

  {{#if hasPokemon}}
    <!-- Listado de pokemones -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each pokemonList}}
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <img src="{{this.imagen}}" class="card-img-top rounded-top img-fluid" alt="{{this.nombre}}" style="height: 200px; object-fit: cover;">

          <div class="card-body">
            <h5 class="card-title fw-bold">{{this.nombre}}</h5>
            <p class="card-text text-muted mb-1">
              <i class="bi bi-droplet-fill me-1 text-primary"></i><strong>Tipo:</strong> {{this.tipoPrimario}}
            </p>
            <p class="card-text text-muted mb-1">
              <i class="bi bi-geo-alt-fill me-1 text-danger"></i><strong>Regi√≥n:</strong> {{this.region}}
            </p>
          </div>

          <div class="card-footer bg-white border-top-0">
            <div class="d-flex justify-content-end gap-2">
              <a href="/pokemones/edit/{{this.id}}" class="btn btn-success btn-sm d-flex align-items-center gap-1">
                <i class="bi bi-pencil-square"></i> Editar
              </a>
              <form method="POST" action="/pokemones/delete" class="m-0 p-0">
                <input type="hidden" name="pokemonesId" value="{{this.id}}" />
                <button type="submit" class="btn btn-danger btn-sm d-flex delete-pokemones align-items-center gap-1 de">
                  <i class="bi bi-trash3-fill"></i> Eliminar
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  {{else}}
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-sm-6">
        <div class="alert alert-info text-center" role="alert">
          <i class="bi bi-info-circle me-2"></i>
          No hay pokemones registrados actualmente.
        </div>
      </div>
    </div>
  {{/if}}
</div>


{{#section "scripts"}}
  <script src="/assets/js/site/pokemones/index.js"></script>
{{/section}}
