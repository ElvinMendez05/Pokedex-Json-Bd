<div class="container my-5">
  <div class="card shadow-sm border-0">
    <div class="card-body p-4">
      <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-pencil-square me-2"></i>
        {{#if editMode}}Editar Tipo: {{tiposList.nombre}}{{else}}Crear nuevo Tipo{{/if}}
      </h2>

      <form action="/tipos/{{#if editMode}}edit/{{tiposList.id}}{{else}}create{{/if}}" method="POST">
        <!-- Nombre del Tipo -->
        <div class="mb-3">
          <label for="nombre" class="form-label fw-semibold">
            <i class="bi bi-lightning-fill me-1 text-warning"></i>Nombre del Tipo
          </label>
          <input
            type="text"
            class="form-control shadow-sm"
            id="nombre"
            name="nombre"
            placeholder="Ej: Agua, Fuego, Planta"
            required
            value="{{tiposList.nombre}}"
          >
        </div>

        {{#if editMode}}
          <input type="hidden" name="tiposId" value="{{tiposList.id}}">
        {{/if}}

        <!-- Botones -->
        <div class="d-flex justify-content-between">
          <a href="/tipos/index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{#if editMode}}Guardar cambios{{else}}Crear{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
