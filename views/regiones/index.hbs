<div class="container my-5">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-success">
      <i class="bi bi-globe-americas me-2"></i>Listado de Regiones
    </h2>

    <!-- Botón Crear -->
    <a href="/regiones/create" class="btn btn-success shadow-sm">
      <i class="bi bi-plus-circle me-1"></i> Crear nueva región
    </a>
  </div>

  {{#if hasRegion}}
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-hover align-middle bg-white rounded border">
        <thead class="table-success text-center">
          <tr>
            <th scope="col" class="text-start">Nombre de la Región</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each regionList}}
            <tr>
              <td class="text-start fw-semibold">{{this.nombre}}</td>
              <td class="text-end">
                <a href="/regiones/edit/{{this.id}}" class="btn btn-sm btn-outline-success me-2 shadow-sm">
                  <i class="bi bi-pencil-square me-1"></i>Editar
                </a>
                <form action="/regiones/delete" method="POST" class="d-inline">
                  <input type="hidden" name="regionesId" value="{{this.id}}">
                  <button type="submit" class="btn btn-sm btn-outline-danger delete-regiones shadow-sm">
                    <i class="bi bi-trash-fill me-1"></i>Eliminar
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info shadow-sm">
      <i class="bi bi-info-circle me-1"></i>No hay regiones registradas aún.
    </div>
  {{/if}}
</div>

{{#section "scripts"}}
  <script src="/assets/js/site/regiones/index.js"></script>
{{/section}}
