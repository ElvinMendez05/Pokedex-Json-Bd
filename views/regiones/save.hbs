<div class="container my-5">
  <div class="card shadow-sm border-0">
    <div class="card-body p-4">
      <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-pencil-square me-2"></i>
        {{#if editMode}}Editar Región: {{regionList.nombre}}{{else}}Crear nueva Región{{/if}}
      </h2>

      <form action="/regiones/{{#if editMode}}edit/{{regionList.id}}{{else}}create{{/if}}" method="POST">
        <!-- Nombre -->
        <div class="mb-3">
          <label for="nombre" class="form-label fw-semibold">
            <i class="bi bi-globe-americas me-1"></i>Nombre de la Región
          </label>
          <input
            type="text"
            class="form-control shadow-sm"
            id="nombre"
            name="nombre"
            placeholder="Ej: Kanto"
            required
            value="{{#if editMode}}{{regionList.nombre}}{{/if}}"
          >
        </div>

        {{#if editMode}}
          <input type="hidden" name="regionesId" value="{{regionList.id}}">
        {{/if}}

        <!-- Botones -->
        <div class="d-flex justify-content-between">
          <a href="/regiones/index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{#if editMode}}Guardar cambios{{else}}Crear{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
